<mvc:View
    controllerName="employeedatamaster.controller.MainPage"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:u="sap.ui.unified"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns:f="sap.ui.layout.form"
>
<Page id="page" showHeader="false">
    <content>
        <VBox id="_IDGenVBox" class="sapUiLargeMarginTop" alignItems="Center" justifyContent="Center">
            
            <f:SimpleForm
                id="IDGenSimpleForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanL="4"
                labelSpanM="4"
                emptySpanL="3"
                emptySpanM="3"
                columnsL="1"
                columnsM="1"
                width="600px">
                <Label id="_IDGenLabel" text="Template" />
                <RadioButtonGroup id="rbFileType" columns="1" selectedIndex="" select="onTemplateSelection">
                    <buttons>
                        <RadioButton id="RB1" text="Employee Data Master" />
                        <RadioButton id="RB2" text="Employee CSF Data" />
                        <RadioButton id="RB3" text="Employee Data Compensation" />
                    </buttons>
                </RadioButtonGroup>

                <Label id="_IDGenLabel1" text="Employee Count" />
                <Input id="employeeCount" placeholder="Enter No.of Employees" type="Number" />

                <Label id="_IDGenLabel2" text="Cut-off Date" />
                <DatePicker 
                    id="cutoffDate" 
                    placeholder="Select date" 
                    displayFormat="dd-MM-yyyy" 
                    valueFormat="dd-MM-yyyy" 
                    change="onDateSelection" />

                <Label id="_IDGenLabel3" text="Upload File" />
                <u:FileUploader
                    id="fileUploader"
                    name="myFileUpload"
                    change=".onFileUpload"
                    uploadComplete=".onUploadComplete"
                    fileType="xlsx,csv"
                    buttonText="Browse"
                    width="570px" />
                
            </f:SimpleForm>

            <HBox id="_IDGenHBox" justifyContent="Center" class="sapUiSmallMarginTop">
                <Button id="_IDGenButton1"
                    text="Validate"
                    type="Emphasized"
                    press="onValidate"
                    class="sapUiTinyMarginEnd" />
                <Button id="_IDGenButton2"
                    text="Clear"
                    type="Reject"
                    press="onClearPress" />
            </HBox>
        </VBox>
    </content>
</Page>
</mvc:View>